<Window x:Class="Parlis.Client.Views.SendRealTimeMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Parlis.Client.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.SEND_REAL_TIME_MESSAGE_WINDOW_TITLE}" Height="400" Width="750" Closing="SendRealTimeMessageWindowClosing">
    <Viewbox Margin="20" Stretch="Fill" StretchDirection="Both">
        <Grid>
            <TextBox x:Name="ChatTextBox" HorizontalAlignment="Center" Margin="0,-1,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="688" FontSize="15" Height="314" IsReadOnly="True"/>
            <TextBox x:Name="MessageTextBox" Margin="0,322,164,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" FontSize="15"/>
            <Button Content="{x:Static p:Resources.SEND_BUTTON}" HorizontalAlignment="Left" Margin="548,322,0,0" VerticalAlignment="Top" Width="140" FontSize="20" Click="SendButtonClick" Height="38" />
        </Grid>
    </Viewbox>
</Window>