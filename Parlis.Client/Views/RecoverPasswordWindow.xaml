<Window x:Class="Parlis.Client.Views.RecoverPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Parlis.Client.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.PASSWORD_RECOVERY_WINDOW_TITLE}" Height="400" Width="750">
    <Viewbox Margin="20" Stretch="Fill">
        <Grid>
            <Label Content="{x:Static p:Resources.PASSWORD_RECOVERY_WINDOW_TITLE}" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" FontSize="24"/>
            <Label Content="{x:Static p:Resources.REGISTER_PASSWORD_INSTRUCTION_LABEL}" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"/>
            <Label Content="{x:Static p:Resources.CODE_LABEL}" HorizontalAlignment="Left" Margin="130,125,0,0" VerticalAlignment="Top"/>
            <Label Content="{x:Static p:Resources.PASSWORD_LABEL}" HorizontalAlignment="Left" Margin="130,155,0,0" VerticalAlignment="Top"/>
            <TextBlock Text="{x:Static p:Resources.PASSWORD_INSTRUCTION_LABEL}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="366" Margin="0,80,0,0" Height="35" TextWrapping="Wrap" TextAlignment="Center"/>
            <TextBox x:Name="CodeTextBox" HorizontalAlignment="Left" Margin="203,130,0,0" VerticalAlignment="Top" Width="150"/>
            <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="205,160,0,0" VerticalAlignment="Top" Width="150"/>
            <Button Content="{x:Static p:Resources.ACCEPT_BUTTON}" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="80"/>
            <Button Content="{x:Static p:Resources.CANCEL_BUTTON}" HorizontalAlignment="Left" Margin="400,200,0,0" VerticalAlignment="Top" Width="80" Click="CancelButtonClick"/>
        </Grid>
    </Viewbox>
</Window>